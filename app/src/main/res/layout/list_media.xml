<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/list_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/list_image_view"
        android:padding="8dp"
        android:layout_margin="5dp"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_name_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="com.UCMobile.intl"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/media_size_date_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="69.19KB, Nov 27"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/list_more"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:contentDescription="@string/more"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_more_vert_24" />

</LinearLayout>